platform :ios, '9.0'
use_frameworks!

target 'InstalmenHelpSwift' do
   
    pod 'Alamofire', '~> 4.0’                  # 著名的AFNetworking网络基础库Swift版
    pod 'Just', '~> 0.5.7'
    pod 'Kingfisher', '~> 3.2'                 # 图片加载
    pod 'SnapKit', '~> 3.2.0'                  # 约束布局
    pod 'IQKeyboardManagerSwift', ‘~>4.0.0’    # 键盘扩展
    pod 'Validator', '~> 2.1'                  # 输入正确校验
    pod 'SwiftyJSON', '~> 3.1.0’               # 最为开发者认可的JSON解析类
    pod 'RAMAnimatedTabBarController', '~>2.0' # tabBar自定义动画效果
    pod 'LTMorphingLabel'                      # 各种文字动画效果
    pod 'Hue', '~>2.0'                         # 颜色值的框架
    pod 'SDWebImage'
    pod 'AsyncSwift'                           # 关于GCD异步分发的语法糖
    pod 'Appz'                                 # 非常方便地实现App间跳转和DeepLink
    pod 'NVActivityIndicatorView'              # 牛逼的动画库
end  
